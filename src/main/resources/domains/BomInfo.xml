<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.0.xsd">

    <module name="base" package="com.axelor.apps.base.db"/>
    <entity name="BomInfo" lang="java">
        <string name="productRoot" required="true" index="true" />
        <string name="productCode" required="true" />
        <string name="productName" required="true" />
        <string name="supplierName" required="true" />
        <integer name="quantity" required="true" />
        <integer name="stock" />
        <integer name="maxProduct" />
        <decimal name="purchasePrice" />
        <decimal name="stockValue" />
    </entity>
</domain-models>