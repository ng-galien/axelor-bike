<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

	<menuitem name="bike-root" title="Bike config" order="-84"  if="__config__.app.isApp('bike')"
		icon="fa-bicycle"  icon-background="#555555"/>
		
	<menuitem name="bike-products" parent="bike-root" order="5"
		title="Products" action="bike.root.products" />

	<action-view name="bike.root.products" title="Products"
		model="com.axelor.apps.base.db.Product" >
		<view type="grid" name="product-grid" />
		<view type="form" name="product-form" />
		<view type="cards" name="product-cards" />
		<view-param name="limit" value="100"/>
		<view-param name="search-filters" value="products-filters"/>
		<domain>self.isModel = false and self.productTypeSelect = 'storable'</domain>
		<context name="_activeCompany" expr="eval:__user__.activeCompany"/>
		<context name="_fromProduction" expr="eval:true" />
	</action-view>

	<menuitem name="bike-products-variants" parent="bike-root" order="10"
			  title="Produits avec variantes" action="bike.root.products.variants" />

	<action-view name="bike.root.products.variants" title="Variantes des produits"
				 model="com.axelor.apps.base.db.Product" >
		<view type="cards" name="product-cards" />
		<view type="grid" name="product-grid" />
		<view type="form" name="product-form" />
		<view-param name="limit" value="39"/>
		<view-param name="search-filters" value="products-filters"/>
		<domain>self.isModel = :_isModel AND self.productTypeSelect = :_productTypeSelect </domain>
		<context name="_activeCompany" expr="eval:__user__.activeCompany"/>
		<context name="_isModel" expr="true"/>
		<context name="_productTypeSelect" expr="storable"/>
	</action-view>
	
</object-views>
